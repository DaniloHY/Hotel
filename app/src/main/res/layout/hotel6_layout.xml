<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotel6Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="413dp"
        android:layout_height="600dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Hotel Resort" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(413)" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="$. Caribe, Hotel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="O melhor hotel da região, com o melhor atendimento. " />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin
                    ="5dp"
                android:background="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Horários Disponíveis" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="20/10"
                    android:textSize="10sp" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="21/10"
                    android:textSize="10sp" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="22/10"
                    android:textSize="10sp" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="23/10"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Reservar" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>